#!/bin/bash

# Set variables
API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request using curl
curl -s -w "%{http_code}" -o "$OUTPUT_FILE" "$API_URL" > temp_status.txt

# Get the HTTP status code
STATUS_CODE=$(cat temp_status.txt)
rm temp_status.txt

# Check if the request was successful
if [ "$STATUS_CODE" -ne 200 ]; then
    echo "[$(date)] Error: Failed to fetch data. HTTP status: $STATUS_CODE" >> "$ERROR_FILE"
    exit 1
fi

echo "Data successfully saved to $OUTPUT_FILE"
exit 0


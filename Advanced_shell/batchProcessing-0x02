#!/bin/bash

# Create output directory if it doesn't exist
mkdir -p pokemon_data

# List of Pokémon to fetch
POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")

# Base API URL
API_URL="https://pokeapi.co/api/v2/pokemon"

# Loop through each Pokémon
for name in "${POKEMONS[@]}"
do
    echo "Fetching data for $name..."
    
    # Fetch and save to corresponding file
    curl -s "${API_URL}/${name}" -o "pokemon_data/${name}.json"
    
    # Check if the file was created and not empty
    if [ -s "pokemon_data/${name}.json" ]; then
        echo "Saved data to pokemon_data/${name}.json ✅"
    else
        echo "Failed to fetch data for $name ❌"
    fi

    # Respectful delay to avoid hitting rate limits (1s pause)
    sleep 1
done
